<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSplash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E8789">

    <!-- CONTAINER TENGAH -->
    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name"
            android:visibility="invisible" />

        <!-- Judul Aplikasi -->
        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="SNAMER"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:visibility="invisible" />

        <!-- Status lokasi: "Mendeteksi Lokasi Anda" / "Selamat Datang" -->
        <TextView
            android:id="@+id/txtLocationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Mendeteksi Lokasi Anda"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="invisible" />

        <!-- Chip lokasi (icon + text) -->
        <LinearLayout
            android:id="@+id/layoutLocationChip"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_chip_location"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/imgLocationIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/location_icon" />

            <TextView
                android:id="@+id/txtLocationValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Mencari Lokasi..."
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
