<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E8789">

    <!-- AREA TENGAH -->
    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Teks penyemangat (dibesarkan) -->
        <TextView
            android:id="@+id/txtMotivation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayo gigit ular hari ini"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginBottom="24dp" />

        <!-- Gambar ular yang berputar (dibesarkan) -->
        <ImageView
            android:id="@+id/imgSnake"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:src="@drawable/logo_homescreen"
            android:contentDescription="@string/app_name" />

        <!-- Nilai timer (dibesarkan) -->
        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="00:00"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- Tombol Mulai (lebih besar) -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Mulai"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:drawableStart="@drawable/botton"
            android:drawablePadding="8dp"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- BOTTOM NAV BAR (sedikit naik dari bawah) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- HOME -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_bottom_nav_item"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconHome"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/taskbar_home"
                android:tint="@android:color/black" />
        </LinearLayout>

        <!-- TAB 2: TIMER LIST / ALARM -->
        <LinearLayout
            android:id="@+id/navTimer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_bottom_nav_item"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconTimer"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/taskbar_timer"
                android:tint="@android:color/black" />
        </LinearLayout>

        <!-- TAB 3: HISTORY / RIWAYAT -->
        <LinearLayout
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_bottom_nav_item"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconHistory"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/taskbar_bag"
                android:tint="@android:color/black" />
        </LinearLayout>

        <!-- TAB 4: REWARD / SHOP -->
        <LinearLayout
            android:id="@+id/navReward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_bottom_nav_item"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconReward"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/taskbar_shop"
                android:tint="@android:color/black" />
        </LinearLayout>

        <!-- TAB 5: PROFILE / SETTINGS -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_bottom_nav_item"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/taskbar_profile"
                android:tint="@android:color/black" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
